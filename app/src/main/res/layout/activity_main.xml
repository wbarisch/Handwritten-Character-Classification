<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.hcc_elektrobit.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#87CEFA"
        tools:context=".DrivingMode">

        <LinearLayout
            android:id="@+id/output_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/drawing_canvas">

            <TextView
                android:id="@+id/char_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:padding="20dp"
                android:textSize="30dp"
                android:background="@android:color/holo_blue_dark"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <com.example.hcc_elektrobit.DrawingCanvas
            android:id="@+id/drawing_canvas"
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintDimensionRatio="1" />

        <EditText
            android:id="@+id/text_editor"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:inputType="textMultiLine"
            android:lines="8"
            android:maxLines="8"
            android:scrollHorizontally="false"
            android:gravity="top|start"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:clickable="false"
            android:longClickable="false"
            android:hint="Draw on the canvas to write!"
            android:layout_margin="20dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@id/drawing_canvas"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


